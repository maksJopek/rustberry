#!/bin/sh
# List branches
branches="$(git branch | sed 's/\*//g')"
branches="$(echo $branches | sed 's/[[:space:]]/\n/g' | awk '{print "[" NR-1 "]", $0}')" # Not working with "$branches"

# Branch selection
echo "# Select branch"
printf "$branches\n"
read -r selection

# Getting branch name
branch="$(printf "%s\n" "$branches" | grep '^\['"$selection" | sed --posix -E 's/\[.\][[:space:]]//g')"

# Switching branch
git checkout "$branch"
